{
  "name": "visual-novel",
  "scripts": {
    "hugo": "npm run jsonifier && hugo serve --disableFastRender",
    "hugo:build": "hugo --gc --minify",
    "jsonifier:test": "mocha jsonifier/tweeToJson.test.js",
    "jsonifier": "node jsonifier/jsonize.js",
    "build:s1": "npx extwee -c -i story-1.twee -s story-formats/harlowe-3.3.5/format.js -o stories/1.html",
    "build:stories": "npm run build:s1",
    "build": "npm run jsonifier && npm run hugo:build"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "extwee": "^2.0.6",
    "line-reader": "^0.4.0"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "request": "^2.88.2"
  }
}
